<?php 
/* Get all sub category of specific parent category for single posts start */
echo '<pre>'; echo get_the_ID(); echo '</pre>'; 
$post_id=get_the_ID();

$args = array('child_of' => 2);
$categories = get_categories( $args );
foreach($categories as $category) { 
	echo '<pre>';
	if(has_category( $category->term_id, $post_id )){
    echo '<p>Category: <a href="' . get_category_link( $category->term_id ) . '" title="' . sprintf( __( "View all posts in %s" ), $category->name ) . '" ' . '>' . $category->name.'</a> </p> ';
    echo '<p> Description:'. $category->description . '</p>';
	}
	echo '</pre>';
}
/* Get all sub category of specific parent category for single posts end */

/* find all type of post belongs to specific category start*/
$args = array (
    'cat' => array(3),
    'posts_per_page' => -1, //showposts is deprecated
    'orderby' => 'date',
	'post_type' => array('post','services'),//You can specify more filters to get the data 
);

$cat_posts = new WP_query($args);

if ($cat_posts->have_posts()) : while ($cat_posts->have_posts()) : $cat_posts->the_post();
        the_title();
endwhile; endif;

/* find all type of post belongs to specific category end*/
?>
